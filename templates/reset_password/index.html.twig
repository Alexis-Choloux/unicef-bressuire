{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Unicef Bressuire
{% endblock %}

{% block css %}
	<link href="{{ asset('assets/css/effects.css') }}" rel="stylesheet"/> 
	<link href="{{ asset('assets/css/login-register.css') }}" rel="stylesheet"/>
{% endblock %}

{% block content %}
	<div class="container col-md-8 offset-md-2 mt-3 mb-5">

        {% for message in app.flashes('notice') %}
            <div class="alert alert-warning">{{ message }}</div>
        {% endfor %}
		<h1 class="h3 mb-3 font-weight-normal">Mot de passe oublié</h1>

		<div class="col-md-6 offset-md-1 mt-4 authForm">
			<form method="post">
				<label for="inputEmail">Saisissez votre adresse email :</label>
				<input type="email" value="" name="email" id="inputEmail" class="form-control mt-2" placeholder="Saisissez ici votre email" required autofocus>

				<div class="text-end mt-4">
					<button class="btn btn-sm btn-lg btn-uniblue" type="submit">
						Réinitialiser mon mot de passe
					</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
