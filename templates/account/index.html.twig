{% extends 'base.html.twig' %}

{% block title %}Mon compte - Unicef Bressuire{% endblock %}

{% block css %}
<link href="{{ asset('assets/css/account.css') }}" rel="stylesheet"/> 
<link href="{{ asset('assets/css/effects.css') }}" rel="stylesheet"/> 
{% endblock %}

{% block content %}
<div class="container col-md-8 offset-md-2 mt-3 mb-5">
    <h1>Mon compte</h1>

    <p class="fst-italic text-muted">
        Pour une suppression de votre compte, merci de vous adresser à nos équipes via le 
        <a href="{{ path('contact') }}">formulaire de contact</a>
    </p>

    <div class="row mt-2">
        <div class="col-md-4 text-center" id="profilLogo">
            <i class="fas fa-user"></i>
        </div>
        <div class="col-md-8 mt-4" id="detailAccount">
            <h3>
                {{ app.user.firstname }} {{ app.user.lastname }}
            </h3>
            <p class="text-muted">
                {{ app.user.email }}
            </p>
            <div class="row mt-4">
                <div class="col-md-4">
                    <a href="{{ path('account_password') }}">
                        <div class="card mb-3 text-center account-card" id="passwordCard">
                            <div class="mt-4">
                                <i class="fas fa-fingerprint fa-3x"></i>
                                <p class="mt-3 ms-3 me-3 text-dark">
                                    Changer mon mot de passe
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="{{ path('account_address') }}">
                        <div class="card mb-3 text-center account-card" id="addressCard">
                            <div class="mt-4">
                                <i class="fas fa-mobile fa-3x"></i>
                                <p class="mt-3 ms-3 me-3 text-dark">
                                    Gérer mes coordonnées
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="{{ path('account_order') }}">
                        <div class="card mb-3 text-center account-card" id="orderCard">
                            <div class="mt-4">
                                <i class="fas fa-boxes fa-3x"></i>
                                <p class="mt-3 ms-3 me-3 text-dark">
                                    Accéder à mes commandes
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
